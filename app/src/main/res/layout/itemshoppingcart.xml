<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    app:cardCornerRadius="4dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/item_giohang_image"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp"></ImageView>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:id="@+id/item_giohang_tensanpham"
                android:text="Ten San Pham"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:weightSum="18"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="5"
                    android:id="@+id/item_giohang_gia"
                    android:layout_marginLeft="5dp"
                    android:text="140.000 d"
                    android:textSize="15sp"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                </TextView>
                <ImageView
                    android:id="@+id/item_giohang_tru"
                    android:src="@drawable/baseline_remove_24"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></ImageView>
                <TextView
                    android:id="@+id/item_giohang_soluong"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="1"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/item_giohang_cong"
                    android:layout_weight="2"
                    android:src="@drawable/baseline_add_24"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></ImageView>
                <ImageView
                    android:layout_weight="2"
                    android:src="@drawable/baseline_drag_handle_24"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"></ImageView>
                <TextView
                    android:id="@+id/item_giohang_gia2"
                    android:textColor="@android:color/holo_red_dark"
                    android:layout_weight="5"
                    android:text="140.000 d"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>


            </LinearLayout>
            <ImageView
                android:id="@+id/item_giohang_delete"
                android:src="@drawable/baseline_delete_24"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="220dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>